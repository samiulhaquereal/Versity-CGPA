<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:gravity="fill_vertical"
        android:text="Very Good !"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.335"
        tools:ignore="MissingConstraints" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150sp"
        app:cpb_background_progressbar_color="#DDD"
        app:cpb_background_progressbar_color_direction="right_to_left"
        app:cpb_background_progressbar_width="25sp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="@color/main"
        app:cpb_progressbar_width="25sp"
        app:cpb_round_border="true"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/text_view_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
        app:layout_constraintVertical_bias="0.578"
        tools:text="3.60" />

    <TextView
        android:id="@+id/text_view_progress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
        app:layout_constraintVertical_bias="0.335"
        tools:text="CGPA" />

    <RelativeLayout
        android:padding="15sp"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="5sp"
                app:cardBackgroundColor="#5E5C5C"
                app:cardCornerRadius="10sp"
                app:cardMaxElevation="5sp">

                <TextView
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="year"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:elevation="5sp"
                app:cardBackgroundColor="#5E5C5C"
                app:cardCornerRadius="10sp"
                app:cardMaxElevation="5sp">

                <TextView
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CSE"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="Dept"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:elevation="5sp"
                app:cardBackgroundColor="#5E5C5C"
                app:cardCornerRadius="10sp"
                app:cardMaxElevation="5sp">

                <TextView
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="FSIT"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="Faculty"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="5sp"
                app:cardBackgroundColor="#5E5C5C"
                app:cardCornerRadius="10sp"
                app:cardMaxElevation="5sp">

                <TextView
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="Semester"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:elevation="5sp"
                app:cardBackgroundColor="#5E5C5C"
                app:cardCornerRadius="10sp"
                app:cardMaxElevation="5sp">

                <TextView
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="55th"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="Batch"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:elevation="5sp"
                app:cardBackgroundColor="#5E5C5C"
                app:cardCornerRadius="10sp"
                app:cardMaxElevation="5sp">

                <TextView
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="101"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:text="Credits"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="471dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>